<style type="text/css">  body{   background-image: url('/img/login3.jpg');  background-position:center;  background-repeat:repeat;  background-attachment:fixed;  } .card { margin-left: 28%;}  </style>


{{!-- <div class="row"> --}}


	{{#each nuevos_socios}}
<table>
			<tr>
				<th>ID</th>
				<th>Nombre</th>
				<th>Apellido</th>
				<th>Cedula</th>
				<th>Estado Solicitud</th>
				<th>Fecha Solicitud</th>
				<th>Acciones</th>
			</tr>
						
			
						
			<tr>
					<td>{{id}}</td>
					<td>{{nombre}}</td>
					<td>{{apellido}}</td>
					<td>{{cedula}}</td>
					<td>{{estado_solicitud}}</td>
					<td>{{fecha_solicitud}}</td>
											<form action="/solicitud/edit/{{id}}?_method=PUT" id="Form1" method="POST">
											</form>
						<form action="/solicitud/delete/{{id}}?_method=DELETE" id="Form2" method="POST">
						</form>

					<td>


											
						<input type="hidden" name="_method" value="PUT">
						<button class="enlace" name="acept" form="Form1" value="Aceptada">Aceptar</button>
							|
						<input type="hidden" name="_method" value="DELETE">
						<button class="enlace1" form="Form2" type="submit">Rechazar</button>

											
					</td>
				</tr>
			
		
		</table>
		{{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Sorry! {{user.name}}</h1>
      <p class="lead">No se ha encontrado la Solicitud.</p>
      <a href="/buscador" class="btn btn-rose btn-round col text-center">Volver atras</a>
    </div>
  </div>
{{/each}}
{{!-- </div> --}}